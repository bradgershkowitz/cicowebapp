<%# card displaying macro goals and daily goals%>
    <%# practice displaying the date%>

           <span>Displaying diary for</span>
            <span><%= days.dateString %></span>
            <br>
            <div class="row">
                <div class="col-xs-12 col-md-12">
                    <div class="well well-sm">
                        <div class="row">
                            <!-- the overall caloric values -->
                            <div class="col-xs-12 col-md-6 text-center">
                                <h1 class="rating-num goals">
                                </h1>
                                <div>
                                    <svg width="12" height="16" viewBox="0 0 12 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" clip-rule="evenodd" d="M5.05 0.310003C5.86 2.48 5.46 3.69 4.53 4.62C3.55 5.67 1.98 6.45 0.900001 7.98C-0.549999 10.03 -0.799999 14.51 4.43 15.68C2.23 14.52 1.76 11.16 4.13 9.07C3.52 11.1 4.66 12.4 6.07 11.93C7.46 11.46 8.37 12.46 8.34 13.6C8.32 14.38 8.03 15.04 7.21 15.41C10.63 14.82 11.99 11.99 11.99 9.85C11.99 7.01 9.46 6.63 10.74 4.24C9.22 4.37 8.71 5.37 8.85 6.99C8.94 8.07 7.83 8.79 6.99 8.32C6.32 7.91 6.33 7.13 6.93 6.54C8.18 5.31 8.68 2.45 5.05 0.320003L5.03 0.300003L5.05 0.310003Z" fill="#1B1F23"/>
                                        </svg>
                                    Calories Remaining
                                </div>
                                <!-- center-progressbar is a custom class -->
                                <div class="col-xs-8 col-md-9 center-progressbar">
                                
                                    <div class="progress progress-success">
                                        <!-- bg-info is the class that assigns this one the blue color-->
                                        <div class="progress-bar bg-info" id="progress-bar-calories" role="progressbar" aria-valuenow="20" aria-valuemin="0"
                                            aria-valuemax="100" style="width: 0%">
                                            <span class="sr-only"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- carbs -->
                            <div class="col-xs-12 col-md-6">
                                <div class="col-xs-3 col-md-3 text-right">
                                    <span class="">Macros Left:</span>
                                </div>
                                <br>
                                <div class="row rating-desc">
                                    <br>
                                    <div class="col-xs-3 col-md-3 text-right">
                                        <span class=""></span>Carbs:
                                        <span class="carbs"></span>
                                    </div>
                                    <div class="col-xs-8 col-md-9">
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-carbs" id="progress-bar-carbs" role="progressbar" aria-valuenow="20" aria-valuemin="0"
                                                aria-valuemax="100" style="width: 0%">
                                                <!-- adds % to the progress bar <span class="sr-only">0%</span> -->
                                            </div>
                                        </div>
                                    </div>
                                    <!-- fats -->
                                    <div class="col-xs-3 col-md-3 text-right">
                                        <span class=""></span>Fats:
                                        <span class="fats"></span>
                                    </div>
                                    <div class="col-xs-8 col-md-9">
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-fats" id="progress-bar-fats" role="progressbar" aria-valuenow="20" aria-valuemin="0"
                                                aria-valuemax="100" style="width: 0%">
                                                <!-- adds % to the progress bar <span class="sr-only">0%</span> -->
                                            </div>
                                        </div>
                                    </div>
                                    <!--proteins -->
                                    <div class="col-xs-3 col-md-3 text-right">
                                        <span class=""></span>Proteins:
                                        <span class="proteins"></span>
                                    </div>
                                    <div class="col-xs-8 col-md-9">
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-protein" id="progress-bar-proteins" role="progressbar" aria-valuenow="80" aria-valuemin="0"
                                                aria-valuemax="100" style="width: 0%">
                                                <!-- adds % to the progress bar <span class="sr-only">0%</span> -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
